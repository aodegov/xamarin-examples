<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:a="clr-namespace:SampleBottomDrawer"
       Visual="Material"
    x:Class="SampleBottomDrawer.AppShell">

    <FlyoutItem Title="XAML">
        <ShellContent
            ContentTemplate="{DataTemplate a:MainPage}"/>
        </FlyoutItem>
    <FlyoutItem Title="Code">
        <ShellContent
            ContentTemplate="{DataTemplate a:MainPageCode}"/>
        </FlyoutItem>
    
</Shell>
